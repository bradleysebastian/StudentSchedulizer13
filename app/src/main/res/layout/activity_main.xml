<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/all_terms_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showAllTerms"
        android:text="@string/show_terms"
        style="@style/ff_button_style"/>

    <Button
        android:id="@+id/course_load_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showMonthlyCourseLoad"
        android:text="@string/monthly_course_load"
        style="@style/ff_button_style"/>
</LinearLayout>